---
const tiers = [
  {
    name: 'Free',
    price: '$0',
    period: 'forever',
    description: 'Perfect for trying out',
    features: [
      '5 builds per month',
      '50 brain notes',
      '1 project',
      'Community support',
    ],
    cta: 'Start Free',
    highlighted: false,
  },
  {
    name: 'Lite',
    price: '$5',
    period: '/month',
    description: 'For indie hackers',
    features: [
      '25 builds per month',
      '1,000 brain notes',
      '3 projects',
      'GitHub integration',
      'Priority support',
    ],
    cta: 'Get Lite',
    highlighted: false,
  },
  {
    name: 'Pro',
    price: '$15',
    period: '/month',
    description: 'For serious builders',
    features: [
      'Unlimited builds',
      'Unlimited brain notes',
      'Unlimited projects',
      'GitHub integration',
      'Priority support',
      'Early access features',
    ],
    cta: 'Get Pro',
    highlighted: true,
  },
  {
    name: 'Team',
    price: '$29',
    period: '/month',
    description: 'For growing teams',
    features: [
      'Everything in Pro',
      'Up to 5 team members',
      'Shared brain',
      'Team analytics',
      'Admin controls',
    ],
    cta: 'Get Team',
    highlighted: false,
  },
];
---

<section id="pricing" class="pricing">
  <div class="container">
    <h2 class="section-title">Simple, fair pricing</h2>
    <p class="section-subtitle">Start free. Upgrade when you need more power.</p>

    <div class="pricing-grid">
      {tiers.map((tier) => (
        <div class={`pricing-card ${tier.highlighted ? 'highlighted' : ''}`}>
          {tier.highlighted && <span class="popular-badge">Most Popular</span>}
          <h3 class="tier-name">{tier.name}</h3>
          <div class="tier-price">
            <span class="price">{tier.price}</span>
            <span class="period">{tier.period}</span>
          </div>
          <p class="tier-description">{tier.description}</p>
          <ul class="tier-features">
            {tier.features.map((feature) => (
              <li>
                <svg class="check-icon" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="#" class={`btn ${tier.highlighted ? 'btn-primary' : 'btn-secondary'} btn-full`}>
            {tier.cta}
          </a>
        </div>
      ))}
    </div>

    <p class="pricing-note">
      All plans use BYOK (Bring Your Own Key) â€” you pay Anthropic directly for API usage.
    </p>
  </div>
</section>

<style>
  .pricing {
    padding: 6rem 2rem;
    background: var(--moria-800);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-top: 4rem;
  }

  .pricing-card {
    background: var(--moria-700);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    text-align: left;
    position: relative;
    transition: all 0.3s;
  }

  .pricing-card:hover {
    border-color: var(--dwarven-blue);
  }

  .pricing-card.highlighted {
    border-color: var(--dwarven-blue);
    transform: scale(1.02);
    box-shadow: 0 8px 30px rgba(74, 111, 165, 0.2);
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--dwarven-blue);
    color: white;
    padding: 0.25rem 1rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .tier-name {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--mythril-100);
  }

  .tier-price {
    margin-bottom: 0.5rem;
  }

  .price {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--mythril-100);
  }

  .period {
    color: var(--mythril-500);
    font-size: 1rem;
  }

  .tier-description {
    color: var(--mythril-400);
    margin-bottom: 1.5rem;
    font-size: 0.9375rem;
  }

  .tier-features {
    list-style: none;
    margin-bottom: 2rem;
  }

  .tier-features li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    color: var(--mythril-300);
    font-size: 0.875rem;
  }

  .check-icon {
    color: var(--dwarven-blue);
    flex-shrink: 0;
  }

  .pricing-note {
    margin-top: 3rem;
    color: var(--mythril-500);
    font-size: 0.875rem;
  }

  @media (max-width: 1024px) {
    .pricing-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .pricing-card.highlighted {
      transform: none;
    }
  }

  @media (max-width: 640px) {
    .pricing-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
