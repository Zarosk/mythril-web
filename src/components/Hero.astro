---
// Hero section with animated logo
---

<section class="hero">
  <div class="hero-content">
    <!-- Animated Logo -->
    <div class="hero-logo">
      <svg width="120" height="120" viewBox="0 0 100 100" class="animated-logo">
        <defs>
          <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#d1d5db" />
            <stop offset="50%" stop-color="#a8aeb8" />
            <stop offset="100%" stop-color="#c0c5cc" />
          </linearGradient>
          <radialGradient id="heroGlow" cx="50%" cy="50%" r="50%">
            <stop offset="0%" stop-color="#4a6fa5" stop-opacity="0.6" />
            <stop offset="100%" stop-color="#4a6fa5" stop-opacity="0" />
          </radialGradient>
          <linearGradient id="shimmerGrad" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="white" stop-opacity="0" />
            <stop offset="50%" stop-color="white" stop-opacity="0.3" />
            <stop offset="100%" stop-color="white" stop-opacity="0" />
          </linearGradient>
          <clipPath id="shieldClipHero">
            <path d="M 50 5 L 90 20 L 90 55 C 90 75, 70 90, 50 95 C 30 90, 10 75, 10 55 L 10 20 Z" />
          </clipPath>
          <filter id="glowFilter" x="-50%" y="-50%" width="200%" height="200%">
            <feGaussianBlur stdDeviation="3" result="coloredBlur" />
            <feMerge>
              <feMergeNode in="coloredBlur" />
              <feMergeNode in="SourceGraphic" />
            </feMerge>
          </filter>
        </defs>

        <!-- Background glow -->
        <ellipse cx="50" cy="55" rx="35" ry="40" fill="url(#heroGlow)" class="glow-bg" />

        <!-- Shield outline -->
        <path
          d="M 50 5 L 90 20 L 90 55 C 90 75, 70 90, 50 95 C 30 90, 10 75, 10 55 L 10 20 Z"
          fill="none"
          stroke="url(#heroGradient)"
          stroke-width="3"
          stroke-linecap="round"
          stroke-linejoin="round"
          filter="url(#glowFilter)"
          class="shield-outline"
        />

        <!-- Shield fill -->
        <path
          d="M 50 5 L 90 20 L 90 55 C 90 75, 70 90, 50 95 C 30 90, 10 75, 10 55 L 10 20 Z"
          fill="#1a1a2e"
          fill-opacity="0.8"
          class="shield-fill"
        />

        <!-- Inner gem -->
        <path d="M 50 30 L 65 50 L 50 70 L 35 50 Z" fill="#4a6fa5" class="gem" />

        <!-- Gem highlight -->
        <path d="M 50 35 L 60 50 L 50 50 Z" fill="white" fill-opacity="0.3" class="gem-highlight" />

        <!-- Shimmer effect -->
        <rect x="-50" y="0" width="50" height="100" fill="url(#shimmerGrad)" clip-path="url(#shieldClipHero)" class="shimmer" />
      </svg>
    </div>

    <h1 class="hero-title">
      Forge anything<br />you can imagine.
    </h1>

    <p class="hero-subtitle">
      The AI-powered development companion that turns your ideas into working code.
      Describe it. Build it. Ship it.
    </p>

    <div class="hero-actions">
      <a href="https://discord.com/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=8&scope=bot%20applications.commands" class="btn btn-primary btn-large">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor" class="discord-icon">
          <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
        </svg>
        Add to Discord
      </a>
      <a href="#how-it-works" class="btn btn-secondary btn-large">
        See How It Works
      </a>
    </div>

    <p class="hero-note">
      Free tier available · No credit card required · BYOK model
    </p>
  </div>

  <div class="hero-glow"></div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 8rem 2rem 4rem;
    position: relative;
    overflow: hidden;
  }

  .hero-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(74, 111, 165, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  .hero-logo {
    margin-bottom: 2rem;
  }

  /* Logo animations */
  .animated-logo {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .shield-outline {
    stroke-dasharray: 300;
    stroke-dashoffset: 300;
    animation: drawShield 1.5s ease-out forwards;
  }

  @keyframes drawShield {
    to { stroke-dashoffset: 0; }
  }

  .shield-fill {
    opacity: 0;
    animation: fadeIn 0.5s ease-out 0.8s forwards;
  }

  .gem {
    transform: scale(0);
    transform-origin: 50px 50px;
    animation: popIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) 1s forwards;
  }

  @keyframes popIn {
    to { transform: scale(1); }
  }

  .gem-highlight {
    opacity: 0;
    animation: fadeIn 0.3s ease-out 1.2s forwards;
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  .glow-bg {
    opacity: 0;
    animation: fadeIn 0.5s ease-out 1.5s forwards;
  }

  .shimmer {
    animation: shimmerMove 3s ease-in-out 2s infinite;
  }

  @keyframes shimmerMove {
    0% { transform: translateX(-100px); }
    100% { transform: translateX(200px); }
  }

  .animated-logo:hover {
    filter: drop-shadow(0 0 20px rgba(74, 111, 165, 0.6));
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--mythril-100) 0%, var(--mythril-400) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--mythril-400);
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .discord-icon {
    flex-shrink: 0;
  }

  .hero-note {
    margin-top: 2rem;
    font-size: 0.875rem;
    color: var(--mythril-500);
  }

  @media (max-width: 640px) {
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .hero-actions .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
